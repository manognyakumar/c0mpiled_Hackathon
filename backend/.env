# ==================================================
# Visitor Management System - Environment Configuration
# ==================================================
# Copy this file to .env and update values for your environment
# Different environments: .env.development | .env.staging | .env.production

# ==================================================
# Application Settings
# ==================================================
APP_ENV=development              # Environment: development | staging | production | test
PROJECT_NAME="Visitor Management System"
VERSION=1.0.0
DEBUG=true                       # Enable debug mode (disable in production)

# ==================================================
# API Settings
# ==================================================
API_V1_STR=/api                  # Base path prefix for API

# ==================================================
# CORS (Cross-Origin Resource Sharing) Settings
# ==================================================
# Comma-separated list of allowed frontend origins
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:5173,http://localhost:8000"

# ==================================================
# JWT Authentication Settings
# ==================================================
SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours for demo

# ==================================================
# Database Settings
# ==================================================
# Leave empty to use default SQLite (file-based)
# For PostgreSQL: postgresql://user:password@localhost:5432/dbname
DATABASE_URL=

# ==================================================
# Whisper/Voice Processing Settings
# ==================================================
WHISPER_MODEL=base               # Model size: base | small | medium | large
USE_MOCK_WHISPER=true            # Use mock transcription (for demo without Whisper)

# ==================================================
# Rate Limiting Settings
# ==================================================
RATE_LIMIT_DEFAULT="200 per minute"
RATE_LIMIT_VOICE="30 per minute"
RATE_LIMIT_APPROVAL="60 per minute"

# ==================================================
# Visitor Settings
# ==================================================
DEFAULT_APPROVAL_DURATION=90     # Default approval window in minutes

# ==================================================
# Logging Settings
# ==================================================
LOG_LEVEL=INFO                   # DEBUG | INFO | WARNING | ERROR
LOG_FORMAT=console               # console (dev) | json (production)
